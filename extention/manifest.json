{
  "manifest_version": 2,

  "name": "ActiveFlow",
  "description": "Extention which helps to do things!",
  "version": "1.0",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": {
      "24": "img/24.png",
      "128": "img/128.png"
    },
    "default_popup": "html/popup.html"
  },
  "icons": {
    "64": "img/64.png"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "contextMenus",
    "tabs",
    "webNavigation",
    "alarms",
    "webRequest",
    "webRequestBlocking"
  ],
  "chrome_url_overrides" : {
    "newtab": "html/main.html"
  }
}